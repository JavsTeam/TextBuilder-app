<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="carditem_imagebutton_style">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:foreground">@drawable/ripple_rounded</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginBottom">@dimen/size_default</item>
        <item name="android:layout_marginTop">@dimen/size_small</item>
        <item name="android:paddingStart">1dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
    </style>

    <style name="clickable_style">
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/ripple_rounded</item>
    </style>

    <style name="text_style_default">
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:padding">@dimen/size_default</item>
    </style>

    <style name="text_style_header">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="android:padding">@dimen/size_default</item>
    </style>

    <style name="edittext_theme_default">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="edittext_style_default">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/bar_height_default</item>
        <item name="android:inputType">number</item>
        <item name="android:textSize">@dimen/text_size_default</item>
        <item name="android:autofillHints">false</item>
    </style>

    <style name="focusable_style">
        <item name="android:focusable">true</item>
    </style>
</resources>